{% style %}
@media screen and (min-width: 750px) {
	.main-carousel {
		padding: 2em 0;
	}
}
  /* "image" actually means "quote" */
  .carousel-cell__image {
    width: 100%; /* full width */
    display: flex;
    align-items: center;
    justify-content: center;
  }
  @media screen and (min-width: 750px) {
    .carousel-cell__image {
      width: 60%; /* full width */
      margin-right: 10rem;
    }
  }
  .carousel-cell__wrap-quote {
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 10px;
    padding: 2em;
    gap: 2em;
    margin: 0 1em;
    background-color: #fff;
  }

  @media screen and (min-width: 750px) {
    .carousel-cell__wrap-quote {
      display: flex;
      flex-flow: row wrap;
      gap: 2em;
      padding: 3em;
    }
  }
  .carousel__title-wrap {
    text-align: center;
  }
  @media screen and (min-width: 750px) {
    .carousel__title-wrap {
      flex: 0 0 100%;
    }
  }
  .carousel__text-wrap {
    flex: 0 1 60%;
  }
  @media screen and (min-width: 750px) {
    .carousel__text-wrap {
      flex: 0 0 50%;
      order: 1;
    }
  }

  .carousel__text-content {
    display: flex;
    flex-direction: column;
    align-items: start;
    gap: 1em;
    border-radius: 10px;
  }
  @media screen and (min-width: 750px) {
    .carousel__text-content {
      background-color: #fff;
    }
  }
  .carousel__title {
    margin: 0;
  }
  .carousel__subtitle {
    margin: 0;
    font-style: italic;
  }
  @media screen and (min-width: 750px) {
    .carousel__subtitle {
      margin: 1em;
    }
  }

  @media screen and (min-width: 750px) {
    .carousel__image-wrap {
      flex: 1 0 1px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 2em;
      order: 2;
    }
  }
  .carousel__image {
    border-radius: 10px;
    object-fit: contain;
    object-position: center;
    max-width: 100%;
    height: auto;
  }

  @media screen and (min-width: 750px) {
    .carousel__button-wrap {
      flex: 1 0 100%;
      text-align: center;
      order: 3;
    }
  }
{% endstyle %}