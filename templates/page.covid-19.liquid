                  onFocus="if (this.value == 'Name (First and Last) *') {this.value=''}" />
              </div>
            </div>
            <div class="floatright">
              <div class="field">
                <select aria-required="true" required name="contact[Credential Type]">
                  <option value="">Credential Type *</option>
                  <option value="Physician">Physician</option>
                  <option value="PA">PA</option>
                  <option value="NP">NP</option>
                  <option value="Registered Dietitian">Registered Dietitian</option>
                  <option value="Nurse">Nurse</option>
                  <option value="Other">Other</option>
                </select>
              </div>
            </div>
          </div>
          <div class="clearfix">
            <div class="floatleft">
              <div class="field">
                <input type="text" name="contact[phone]" value="Office Phone *"
