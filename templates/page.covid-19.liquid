                  onFocus="if (this.value == 'Office Phone *') {this.value=''}" required />
              </div>
            </div>
            <div class="floatright">
              <div class="field">
                <input type="text" name="contact[email]" value="Email *"
                  onBlur="if(this.value == '') { this.value='Email *'}"
                  onFocus="if (this.value == 'Email *') {this.value=''}" required />
              </div>
            </div>
          </div>
          <div class="clearfix">
            <div class="floatleft">
              <div class="field">
                <input type="text" name="contact[Institution name]" value="Institution name *"
                  onBlur="if(this.value == '') { this.value='Institution name'}"
                  onFocus="if (this.value == 'Institution name') {this.value=''}" required />
              </div>
            </div>
            <div class="floatright">
              <div class="field">
                <input type="text" name="contact[Institution address]" value="Institution address *"
                  onBlur="if(this.value == '') { this.value='Institution address'}"
                  onFocus="if (this.value == 'Institution address') {this.value=''}" required />
              </div>
            </div>
          </div>
          <div class="clearfix">
            <div class="floatleft">
              <div class="field">
                <input type="text" name="contact[City]" value="City *"
                  onBlur="if(this.value == '') { this.value='City'}" onFocus="if (this.value == 'City') {this.value=''}"
                  required />
              </div>
            </div>
            <div class="floatright">
              <div class="field">
                <input type="text" name="contact[State]" value="State *"
                  onBlur="if(this.value == '') { this.value='State'}"
                  onFocus="if (this.value == 'State') {this.value=''}" required />
              </div>
            </div>
          </div>
          <div class="clearfix">
            <div class="floatleft">
              <div class="field">
                <input type="text" name="contact[Zipcode]" value="Zipcode *"
                  onBlur="if(this.value == '') { this.value='Zipcode'}"
                  onFocus="if (this.value == 'Zipcode') {this.value=''}" required />
              </div>
            </div>
            <div class="floatright">
              <div class="field">
                <input type="number" placeholder="# Patients in Need" name="contact[Patients in Need]"
                  value="# of patients in need " onBlur="if(this.value == '') { this.value='# Patients in Need'}"
                  onFocus="if (this.value == '# Patients in Need') {this.value=''}" required />
              </div>
            </div>
            <div>
              <div class="field">
                <textarea type="textarea" name="contact[Additional comments for consideration]"
                  value="Additional comments for consideration"
                  onBlur="if(this.value == '') { this.value='Additional comments for consideration'}"
                  onFocus="if (this.value == 'Additional comments for consideration') {this.value=''}"
                  required>Additional comments for consideration</textarea>
              </div>
            </div>
          </div>
          <div class="clearfix">
            <div class="floatright">
              <input type="hidden" name="contact[body]" value="Sample Request" />
              <input type="submit" value="Request Now" />
            </div>
          </div>

          {% endif %}

          {% endform %}

        </div>
      </div>
    </div>
  </div>

