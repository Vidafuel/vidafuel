<script src="{{ 'jquery.validate.min.js' | asset_url }}"></script>
<script>
  jQuery.validator.addMethod("defaultInvalid", function (value, element) {
    switch (element.value) {
      case "Name (First and Last) *":
        if (element.name == "contact[name]") return false;
        break;
      case "Credential Type *":
        if (element.name == "contact[Credential Type]") return false;
        break;
      case "Email *":
        if (element.name == "contact[email]") return false;
        break;
      case "Office Phone *":
        if (element.name == "contact[phone]") return false;
        break;
      case "Institution name *":
        if (element.name == "contact[Institution name]") return false;
        break;
      case "Institution address *":
        if (element.name == "contact[Institution address]") return false;
        break;
      case "City *":
        if (element.name == "contact[City]") return false;
        break;
      case "State *":
        if (element.name == "contact[State]") return false;
        break;
      case "Zipcode *":
        if (element.name == "contact[Zipcode]") return false;
        break;
      default: return true;
        break;
    }
  }, 'This field is required.');
  jQuery(function ($) {

    if ($('#healthcare .healthcare-form .formwrap form').length) {

      $('#healthcare .healthcare-form .formwrap form').validate({
        rules: {
          'contact[name]': {
            required: true,
            defaultInvalid: true
          },
          'contact[Credential Type]': {
            required: true,
            defaultInvalid: true
          },
          'contact[email]': {
            required: true,
            email: true,
            defaultInvalid: true
          },
          'contact[phone]': {
            required: true,
            defaultInvalid: true
          },
          'contact[Institution name]': {
            required: true,
            defaultInvalid: true
          },
          'contact[Institution address]': {
            required: true,
            defaultInvalid: true
          },
          'contact[City]': {
            required: true,
            defaultInvalid: true
          },
          'contact[State]': {
            required: true,
            defaultInvalid: true
          },
          'contact[Zipcode]': {
            required: true,
            defaultInvalid: true
          },
          'contact[Patients in need]': {
            required: true,
            defaultInvalid: true
          }
        }
      });

    }

  });
</script>
