      </div>
    </div>
  </div>
  
  <!-- distribution -->
  <div class="healthcare-distribution">
    <div class="wrapper">
      <div class="inner centertext">
        <div class="title uppercase">Distributed By</div>
        <img src="{{ 'healthcare-05.png' | asset_url }}" alt="" />
      </div>
    </div>
  </div>
  
  <!-- contact -->
  <div class="healthcare-contact">
    <div class="wrapper">
      <div class="inner centertext">
        <p>Have questions about our products?<br />Reach out to us anytime!</p>
        <p>customercare@vidafuel.com <span>|</span> (615) 430-8733</p>
      </div>
    </div>
  </div>
  
</div>

<script src="{{ 'jquery.validate.min.js' | asset_url }}"></script>
<script>
jQuery.validator.addMethod("defaultInvalid", function(value, element) {
  switch (element.value) {
    case "Name (First and Last) *":
      if (element.name == "contact[name]") return false;
      break;
    case "Email *":
      if (element.name == "contact[email]") return false;
      break;
    case "Office Phone *":
      if (element.name == "contact[phone]") return false;
      break;
    default: return true; 
      break;
  }
},  'This field is required.');
jQuery(function($){

    if ($('#healthcare .healthcare-form .formwrap form').length) {
      
      $('#healthcare .healthcare-form .formwrap form').validate({		
        rules: {
          'contact[name]': {
            required: true,
            defaultInvalid: true
          },
          'contact[email]': {
            required: true,
            email: true,
            defaultInvalid: true
          },
          'contact[phone]': {
            required: true,
            defaultInvalid: true
          }
        }
      });
      
    }

});
</script>