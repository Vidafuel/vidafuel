                  <li>No artificial sweeteners or colors</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- request form -->
  <div class="healthcare-form">
    <div class="wrapper">
      <div class="inner">
        <div class="title centertext uppercase trade_gothic_condensed_bold">Sample Request Form</div>
        <div class="formwrap">
          
          {% form 'contact' %}
          
            {% if form.posted_successfully? %}
          
              <p class="centertext" style="color:#ffffff; font-size:20px;">Thank you for your submission. We will be in touch with you shortly!</p>
          
          	{% else %}
          
              {{ form.errors | default_errors }}

              <div class="clearfix">
                <div class="floatleft">
                  <div class="field">
                    <input type="text" 
                           name="contact[name]"
                           value="Name (First and Last) *" 
                           onBlur="if(this.value == '') { this.value='Name (First and Last) *'}" 
                           onFocus="if (this.value == 'Name (First and Last) *') {this.value=''}" />
                  </div>
                </div>
                <div class="floatright">
                  <div class="field">
                    <select name="contact[Credential Type]">
                      <option value="">Credential Type</option>
                      <option value="Physician">Physician</option>
                      <option value="PA">PA</option>
                      <option value="NP">NP</option>
                      <option value="Registered Dietitian">Registered Dietitian</option>
                      <option value="Nurse">Nurse</option>
                      <option value="Other">Other</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="clearfix">
                <div class="floatleft">
                  <div class="field">
                    <input type="text" 
                           name="contact[phone]" 
                           value="Office Phone *"
                           onBlur="if(this.value == '') { this.value='Office Phone *'}" 
                           onFocus="if (this.value == 'Office Phone *') {this.value=''}" />
                  </div>
                </div>
                <div class="floatright">
                  <div class="field">
                    <input type="text" 
                           name="contact[email]"
                           value="Email *"
                           onBlur="if(this.value == '') { this.value='Email *'}" 
                           onFocus="if (this.value == 'Email *') {this.value=''}" />
                  </div>
                </div>
              </div>
              <div class="clearfix">
                <div class="floatleft">
                  <div class="field">
                    <input type="text" 
                           name="contact[Institution name]"
                           value="Institution name"
                           onBlur="if(this.value == '') { this.value='Institution name'}" 
                           onFocus="if (this.value == 'Institution name') {this.value=''}" />
                  </div>
                </div>
                <div class="floatright">
                  <div class="field">
                    <input type="text" 
                           name="contact[Institution address]"
                           value="Institution address"
                           onBlur="if(this.value == '') { this.value='Institution address'}" 
                           onFocus="if (this.value == 'Institution address') {this.value=''}" />
                  </div>
                </div>
              </div>
              <div class="clearfix">
                <div class="floatleft">
                  <div class="field">
                    <input type="text" 
                           name="contact[City]"
                           value="City"
                           onBlur="if(this.value == '') { this.value='City'}" 
                           onFocus="if (this.value == 'City') {this.value=''}" />
                  </div>
                </div>
                <div class="floatright">
                  <div class="field">
                    <input type="text" 
                           name="contact[State]"
                           value="State"
                           onBlur="if(this.value == '') { this.value='State'}" 
                           onFocus="if (this.value == 'State') {this.value=''}" />
                  </div>
                </div>
              </div>
              <div class="clearfix">
                <div class="floatleft">
                  <div class="field">
                    <input type="text"
                           name="contact[Zipcode]"
                           value="Zipcode"
                           onBlur="if(this.value == '') { this.value='Zipcode'}" 
                           onFocus="if (this.value == 'Zipcode') {this.value=''}" />
                  </div>
                </div>
                <div class="floatright">
                  <input type="hidden" name="contact[body]" value="Sample Request" />
                  <input type="submit" value="Request Now" />
                </div>
              </div>
          
            {% endif %}

          {% endform %}
        
        </div>
      </div>
    </div>
  </div>
  
  <!-- textblock -->
  <div class="healthcare-textblock">
    <div class="wrapper">
      <div class="inner centertext">
        <div class="title uppercase trade_gothic_condensed_bold">About Us</div>
        <div class="text trade_gothic_bold">
