<style media="screen">
    .shopify-section:not(.hero-02) .hero {
        background-position: {{ section.settings.h_alignment }} {{ section.settings.alignment }};
    }
    @media only screen and (max-width: 749px) {
        .hero--medium {
            background-image: url("{{ section.settings.mobile_image | img_url: 'x2048' }}");
        }
        .shopify-section:not(.hero-02) .hero {
            background-position: right top;
            background-size: 174vw;
            padding: 4rem 0;
        }
    }
</style>

<div class="hero hero-og hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %} box ratio-container lazyload js"
     {% if section.settings.image %}
     data-bgset="{% include 'bgset', image: section.settings.image %}"
     data-sizes="auto"
     data-parent-fit="cover"
     style="background-image: url('{{ section.settings.image | img_url: 'x2048' }});"
     {% endif %}>
  {% if section.settings.image == blank %}
    <div class="placeholder-background">
      {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
    </div>
  {% endif %}
  <div class="hero__inner">
    <div class="page-width text-center">
        <div class="grid grid--uniform">
            <div class="grid__item {% if section.settings.text_width == 'narrow' %}medium-up--one-half{% else %} medium-up--three-quarters {% endif %} text-left">

                  {% if section.settings.title != blank %}
                    <h1 class="fadeInRight collection-hero__title h1 {% if section.settings.text_size == 'large' %} mega-title--large{% endif %}" style="letter-spacing:0; color: {{ section.settings.hex_text }};">{{ section.settings.title | escape }}</h1>
                  {% endif %}
                  {% if section.settings.text != blank %}
                    <div class="fadeInRight rte-setting mega-subtitle og {% if section.settings.text_size == 'large' %} mega-subtitle--large{% endif %}">{{ section.settings.text }}</div>
                  {% endif %}
                  <style>
                      .mega-subtitle.og p {
                          color: {{ section.settings.hex_text }};
                      }
                  </style>
                  {%- comment -%}
                  <ul class="bullet-list">
                      {% if section.settings.icon_01 != blank %}
                        <li class="bullet in-v fade-in-up diet-list-item" style="color: {{ section.settings.hex_text }};">
                            {{ section.settings.bullet_01 }}
                        </li>
                      {% endif %}

                      {% if section.settings.icon_02 != blank %}
                        <li class="bullet in-v fade-in-up diet-list-item" style="color: {{ section.settings.hex_text }};">
                            {{ section.settings.bullet_02 }}
                        </li>
                      {% endif %}

                      {% if section.settings.icon_03 != blank %}
                        <li class="bullet in-v fade-in-up diet-list-item" style="color: {{ section.settings.hex_text }};">
                            {{ section.settings.bullet_03 }}
                        </li>
                      {% endif %}

                      {% if section.settings.icon_04 != blank %}
                        <li class="bullet in-v fade-in-up diet-list-item" style="color: {{ section.settings.hex_text }};">
                            {{ section.settings.bullet_04 }}
                        </li>
                      {% endif %}

                      {% if section.settings.icon_05 != blank %}
                        <li class="bullet in-v fade-in-up diet-list-item" style="color: {{ section.settings.hex_text }};">
                            {{ section.settings.bullet_05 }}
                        </li>
                      {% endif %}

                      {% if section.settings.icon_06 != blank %}
                        <li class="bullet in-v fade-in-up diet-list-item" style="color: {{ section.settings.hex_text }};">
                            {{ section.settings.bullet_06 }}
                        </li>
                      {% endif %}
                    
                      {% if section.settings.icon_07 != blank %}
                        <li class="bullet in-v fade-in-up diet-list-item" style="color: {{ section.settings.hex_text }};">
                            {{ section.settings.bullet_07 }}
                        </li>
                      {% endif %}
                    
                      {% if section.settings.icon_08 != blank %}
                        <li class="bullet in-v fade-in-up diet-list-item" style="color: {{ section.settings.hex_text }};">
                            {{ section.settings.bullet_08 }}
                        </li>
                      {% endif %}
                  </ul>
                  {%- endcomment -%}
                  {% if section.settings.button_label != blank and section.settings.button_link != blank %}
                    <a href="{{ section.settings.button_link }}" class="btn hero__btn fade-in">
                      {{ section.settings.button_label | escape }}
                    </a>
                  {% endif %}

            </div>

            <div class="grid__item {% if section.settings.text_width == 'narrow' %}medium-up--one-half{% else %} medium-up--one-quarter {% endif %} ">
                <h2 class="hide">VidaFuel Wellness Protein Supplement</h2>
            </div>

        </div>
    </div>
  </div>
</div>

<noscript>
  <div class="hero hero--{{ section.settings.hero_size }}{% if section.settings.title != blank or section.settings.text != blank or section.settings.button_label != blank %} hero__overlay{% endif %}"{% if section.settings.image %} style="background-image: url('{{ section.settings.image | img_url: '2048x' }}'); background-position: {{ section.settings.h_alignment }} {{ section.settings.alignment }};"{% endif %}></div>
</noscript>

