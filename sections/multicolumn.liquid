{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>
{% comment %} SECTION logic {% endcomment %}
{% liquid
  # VARIABLES
  assign imageContainCLASS = ''
  assign textColorPrimary = ''
  assign pBullets = ''
  assign imageClass = ''
  assign imageLeftAlignCLASS = ''
  # #
  # SECTION logic
  # #
  # SECTION background image
  if section.settings.bk_image
    assign backgroundStyle = 'bk-image'
  elsif section.settings.background_style == 'custom_bk_color'
    assign backgroundStyle = section.settings.background_style
    assign backgroundStyleCLASS = 'background-custom_bk_color'
    assign backgroundStyleColor = section.settings.background_style_color
  else
    assign backgroundStyle = section.settings.background_style
  endif
  # SECTION heading color
  if section.settings.main_heading_text_color != "#0000000"
    assign heading_color_style = 'style="color:' | append: section.settings.main_heading_text_color | append: '""' 
  endif
  if section.settings.col_img_contain
    assign imageContainCLASS = 'image-contain'
  endif
  if section.settings.col_img_left_align
    assign imageLeftAlignCLASS = ' left-align'
  endif
  
  # COLUMN custom text color
  if section.settings.column_custom_text_color == true
    assign columnHeadingColorCLASS = ' column-heading-color'
    assign columnDescripColorCLASS = ' column-descrip-color'
  else
    assign columnHeadingColorCLASS = ''
    assign columnDescripColorCLASS = ''
  endif 
  
  # COLUMN heading size
  if section.settings.column_heading_size != 'default' 
    assign columnHeadingSize = section.settings.column_heading_size 
  endif
  # COLUMN description text size
  if section.settings.column_description_size != 'default'
    assign columnDescriptionSize = ' ' | append: section.settings.column_description_size
  else
    assign columnDescriptionSize = ' default'
  endif
  
  
  # #
  # COLUMN logic
  # #
  for block in section.blocks
    case block.type
      when 'column'
        assign columnID = 'col-' | append: forloop.index

        # COLUMN custom css
        if block.settings.col_custom_css != empty
        endif
        # COLUMN bullets
        if block.settings.p_bullets
          assign pBullets = ' p_bullets'
        endif
        if block.settings.column_border_color_enable
          assign columnsPadding = ' column-border-padding'
        endif
    endcase
  endfor
%}


<div class="multicolumn background-{{ backgroundStyle }} multicolumn--{{ section.settings.section_height }} {% if section.settings.background_style == 'gradient-1' %} gradient color-accent-1{% elsif section.settings.background_style == 'gradient-2' %} gradient color-accent-2{% endif %}{% if section.settings.title == blank %} no-heading{% endif %}{% if section.settings.desktop_no_spacing %} desktop_no_spacing{% endif %}">
  {% if section.settings.bk_image != blank %}
  <img
    srcset="{%- if section.settings.bk_image.width >= 275 -%}{{ section.settings.bk_image | image_url: width: 275 }} 275w,{%- endif -%}
      {%- if section.settings.bk_image.width >= 550 -%}{{ section.settings.bk_image | image_url: width: 550 }} 550w,{%- endif -%}
      {%- if section.settings.bk_image.width >= 710 -%}{{ section.settings.bk_image | image_url: width: 710 }} 710w,{%- endif -%}
      {%- if section.settings.bk_image.width >= 1420 -%}{{ section.settings.bk_image | image_url: width: 1420 }} 1420w,{%- endif -%}
      {{ section.settings.bk_image | image_url }} {{ section.settings.bk_image.width }}w"
    src="{{ section.settings.bk_image | image_url: width: 550 }}"
    sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
    alt="{{ section.settings.bk_image.alt }}"
    height="{{ section.settings.bk_image.height }}"
    width="{{ section.settings.bk_image.width }}"
    class="multicolumn-bk-image multicolumn-bk-image__desktop"
    loading="lazy"
  >
  {% endif %}
  {% if section.settings.bk_image_mobile != blank %}
  <img
    srcset="{%- if section.settings.bk_image_mobile.width >= 275 -%}{{ section.settings.bk_image_mobile | image_url: width: 275 }} 275w,{%- endif -%}
      {%- if section.settings.bk_image_mobile.width >= 550 -%}{{ section.settings.bk_image_mobile | image_url: width: 550 }} 550w,{%- endif -%}
      {%- if section.settings.bk_image_mobile.width >= 710 -%}{{ section.settings.bk_image_mobile | image_url: width: 710 }} 710w,{%- endif -%}
      {%- if section.settings.bk_image_mobile.width >= 1420 -%}{{ section.settings.bk_image_mobile | image_url: width: 1420 }} 1420w,{%- endif -%}
      {{ section.settings.bk_image_mobile | image_url }} {{ section.settings.bk_image_mobile.width }}w"
    src="{{ section.settings.bk_image_mobile | image_url: width: 550 }}"
    sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
    alt="{{ section.settings.bk_image_mobile.alt }}"
    height="{{ section.settings.bk_image_mobile.height }}"
    width="{{ section.settings.bk_image_mobile.width }}"
    class="multicolumn-bk-image multicolumn-bk-image__mobile"
    loading="lazy"
  >
  {% endif %}
  <div class="{{ section.settings.page_width }}">
    <div class="title-wrapper-with-link title-wrapper--self-padded-mobile{% if section.settings.page_width == 'full-width' %}--full-width{% endif %} {% if section.settings.title == blank %} title-wrapper-with-link--no-heading{% endif %}">
      <h2 class="title{% if section.settings.title_center %} center{% endif %}{% if section.settings.title_size != 'default' %} {{ section.settings.title_size }}{% endif %}" {{ heading_color_style }}>
        {{ section.settings.title }}
      </h2>
      {% comment %}
      {%- if section.settings.button_label != blank and section.settings.swipe_on_mobile -%}
        <a href="{{ section.settings.button_link }}" class="link underlined-link large-up-hide">{{ section.settings.button_label | escape }}</a>
      {%- endif -%}
      {% endcomment %}
    </div>
    <slider-component class="slider-mobile-gutter">
      <ul class="multicolumn-list {% if section.settings.page_width == 'full-width' %}full-width {% endif %}{{ section.settings.vertical_alignment }} grid grid--1-col{% if section.blocks.size > 3 and section.settings.image_width != 'full' %} grid--2-col-tablet grid--4-col-desktop{% elsif section.blocks.size > 3 and section.settings.image_width == 'full' %} grid--2-col-tablet{% else %} grid--3-col-tablet{% endif %}{% if section.settings.swipe_on_mobile and section.blocks.size > 1 %} slider slider--mobile grid--peek{% endif %} {{ section.id }}{{ columnsPadding }}"
        id="Slider-{{ section.id }}"
        role="list"
      >
        {%- liquid
          assign highest_ratio = 0
          for block in section.blocks
            if block.settings.image_max_width
              assign highest_ratio = block.settings.image_max_width
            elsif block.settings.image.aspect_ratio > highest_ratio
              assign highest_ratio = block.settings.image.aspect_ratio
            endif
          endfor
        -%}
        {%- for block in section.blocks -%}
          {% case block.type %}
            {% when 'column' %}
              {% liquid
                assign columnIdNew = 'col-' | append: forloop.index
                if block.settings.image_max_height != 0
                  assign imageClass = 'custom-height-image'
                  assign imageHeight = block.settings.image_max_height
                endif
                if block.settings.column_image_position != 'center center'
                  assign columnImagePosition = block.settings.column_image_position
                else 
                  assign columnImagePosition = "center center"
                endif
                # COLUMN border
                if block.settings.column_border_color_enable
                  assign columnBorderColor = block.settings.column_border_color
                endif
              %}

            <li class="multicolumn-list__item {{ columnIdNew }} {% if section.settings.columns != 'default' %} {{ section.settings.columns }}{% endif %} grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if section.settings.column_alignment == 'center' %} center{% endif %}{% if block.settings.image_link_url != blank %} full-width-link_container{% endif %}{{ columnCustomCSSClass }}" {{ block.shopify_attributes }}>
              <div class="multicolumn-card{% if section.settings.card_bk_none %} multicolumn-card-bk_none{% endif %}{% if block.settings.col_content_reverse %} multicolumn__col-reverse{% endif %} flex-align-{{ block.settings.column_elements_alignment }}" {% if block.settings.column_border_color_enable %}style="border: 2px solid {{ columnBorderColor }};border-radius: 6px;"{% endif %}>
                {%- if block.settings.image != blank -%}
                  {% liquid
                    if section.settings.image_ratio == 'adapt' or section.settings.image_ratio == 'circle' 
                      assign spaced_image = true
                    endif
                  %}
                
                  
                  {% comment %} SECTION link {% endcomment %}
                  {% if block.settings.image_link_url != blank %}
                    <a href="{{ block.settings.image_link_url }}" class="full-width-link">
                  {% endif %}
                  
                  {% comment %} SECTION title {% endcomment %}
                  {%- if block.settings.title != blank and block.settings.title_top -%}
                    <h3 class="title-wrapper">
                      {{ block.settings.title }}
                    </h3>
                  {%- endif -%}

                  {% comment %} SECTION link end {% endcomment %}
                  {% if block.settings.image_link_url != blank %}
                    </a>
                  {% endif %}
                  
                  {% if spaced_image and section.settings.page_width == 'full-width' %}
                    {% assign spacing = '' %}
                  {% elsif section.settings.image_width != 'full' or spaced_image %}
                    {% assign spacing = 'multicolumn-card-spacing' %}
                  {% endif %}
                  
                  <div class="multicolumn-card__image-wrapper {{ spacing }} multicolumn-card__image-wrapper--{{ section.settings.image_width }}-width">
                    {% if block.settings.image_url != blank %}
                      <a href="{{ block.settings.image_url }}">
                    {% endif %}
                    
                    {% comment %} COLUMN image mobile {% endcomment %}
                      {% if block.settings.image_mobile %}
                        <div class="media media--transparent multicolumn-image__mobile media--{{ section.settings.image_ratio }}"
                          {% if block.settings.image_max_height != 0 %}
                            style="padding-bottom: {{ block.settings.image_max_height | divided_by: 3 }}%;"
                          {% elsif section.settings.image_ratio == 'adapt' %}
                            style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 145 }}%;"
                          {% endif %}>
                            <img
                              srcset="{%- if block.settings.image_mobile.width >= 275 -%}{{ block.settings.image_mobile | image_url: width: 275 }} 275w,{%- endif -%}
                                {%- if block.settings.image_mobile.width >= 550 -%}{{ block.settings.image_mobile | image_url: width: 550 }} 550w,{%- endif -%}
                                {%- if block.settings.image_mobile.width >= 710 -%}{{ block.settings.image_mobile | image_url: width: 710 }} 710w,{%- endif -%}
                                {%- if block.settings.image_mobile.width >= 1420 -%}{{ block.settings.image_mobile | image_url: width: 1420 }} 1420w,{%- endif -%}
                                {{ block.settings.image_mobile | image_url }} {{ block.settings.image_mobile.width }}w"
                              src="{{ block.settings.image_mobile | image_url: width: 550 }}"
                              sizes="(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %},
                                (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %},
                                calc(100vw - 30px)"
                              alt="{{ block.settings.image_mobile.alt }}"
                              height="{{ block.settings.image_mobile.height }}"
                              width="{{ block.settings.image_mobile.width }}"
                              loading="lazy"
                              class="multicolumn-image {{ columnID }} {{ imageClass }} {{ imageContainCLASS }}{{ imageLeftAlignCLASS }}"
                              style="max-height:{{ imageHeight }}px;object-position:{{ columnImagePosition }}"
                            >
                        </div>
                      {% endif %}
                      {% if block.settings.image %}
                        <div class="media media--transparent multicolumn-image__desktop media--{{ section.settings.image_ratio }}"
                          {% if block.settings.image_max_height != 0 %}
                            style="padding-bottom: {{ block.settings.image_max_height | divided_by: 3 }}%;"
                          {% elsif section.settings.image_ratio == 'adapt' %}
                            style="padding-bottom: {{ 1 | divided_by: highest_ratio | times: 100 }}%;"
                          {% endif %}>
                            <img
                              srcset="{%- if block.settings.image.width >= 275 -%}{{ block.settings.image | image_url: width: 275 }} 275w,{%- endif -%}
                                {%- if block.settings.image.width >= 550 -%}{{ block.settings.image | image_url: width: 550 }} 550w,{%- endif -%}
                                {%- if block.settings.image.width >= 710 -%}{{ block.settings.image | image_url: width: 710 }} 710w,{%- endif -%}
                                {%- if block.settings.image.width >= 1420 -%}{{ block.settings.image | image_url: width: 1420 }} 1420w,{%- endif -%}
                                {{ block.settings.image | image_url }} {{ block.settings.image.width }}w"
                              src="{{ block.settings.image | image_url: width: 550 }}"
                              sizes="(min-width: 990px) {% if section.blocks.size <= 2 %}710px{% else %}550px{% endif %},
                                (min-width: 750px) {% if section.blocks.size == 1 %}710px{% else %}550px{% endif %},
                                calc(100vw - 30px)"
                              alt="{{ block.settings.image.alt }}"
                              height="{{ block.settings.image.height }}"
                              width="{{ block.settings.image.width }}"
                              loading="lazy"
                              class="multicolumn-image {{ columnID }} {{ imageClass }} {{ imageContainCLASS }}{{ imageLeftAlignCLASS }}"
                              style="max-height:{{ imageHeight }}px;object-position:{{ columnImagePosition }}"
                            >
                        </div>
                      {% endif %}
                      
                      
                    {% if block.settings.image_url != blank %}
                      </a>
                    {% endif %}
                  </div>
                {%- endif -%}
                
                {% if block.settings.title != blank or block.settings.title_image != blank or block.settings.text != blank %}
                  <div class="multicolumn-card__info{% if block.settings.custom_liquid != blank %} custom-liquid__info{% endif %} {{ block.settings.column_text_alignment }}">
                    
                    {% comment %} ICON div {% endcomment %}
                    {% if section.settings.icon_enable %}
                      <div class="icon__enable">
                    {% endif %}
                    
                    {% comment %} COLUMN icon element {% endcomment %}
                    {%- if block.settings.title_top == false and block.settings.custom_liquid == blank -%}
                      {% if section.settings.icon_enable %}
                      {% comment %} COLUMN icon {% endcomment %}
                        {% if block.settings.column_icon_color_custom != '#000000' %}
                          {% render 'icon-accordion', icon: block.settings.icon, iconColor: block.settings.column_icon_color_custom %}
                        {% else %}
                          {% render 'icon-accordion', icon: block.settings.icon %}
                        {% endif %}
                      {% endif %}
                    {%- endif -%}
                    
                      {% comment %} COLUMN title element {% endcomment %}
                      {%- if block.settings.title != blank -%}
                          <h3 class="{{ columnHeadingSize }}{{ columnHeadingColorCLASS }}">
                          {{ block.settings.title }}
                        </h3>
                      {%- endif -%}
                      
                      {% comment %} IMAGE element {% endcomment %}
                      {% if block.settings.title_image != blank %}
                        <img
                          srcset="{%- if block.settings.title_image.width >= 275 -%}{{ block.settings.title_image | image_url: width: 275 }} 275w,{%- endif -%}
                            {%- if block.settings.title_image.width >= 550 -%}{{ block.settings.title_image | image_url: width: 550 }} 550w,{%- endif -%}
                            {%- if block.settings.title_image.width >= 710 -%}{{ block.settings.title_image | image_url: width: 710 }} 710w,{%- endif -%}
                            {%- if block.settings.title_image.width >= 1420 -%}{{ block.settings.title_image | image_url: width: 1420 }} 1420w,{%- endif -%}
                            {{ block.settings.title_image | image_url }} {{ block.settings.title_image.width }}w"
                          src="{{ block.settings.title_image | image_url: width: 550 }}"
                          sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                          alt="{{ block.settings.title_image.alt }}"
                          height="43"
                          width="175"
                          loading="lazy"
                        >
                      {% endif %}
                                        
                    {% comment %} ICON /div {% endcomment %}
                    {% if section.settings.icon_enable %}
                      </div>
                    {% endif %}
                    
                    {% comment %} COLUMN text/description element {% endcomment %}
                    {%- if block.settings.text != blank -%}
                      <div class="rte multicolumn-card__info-description{{ textColorPrimary }}{{ pBullets }}{{ columnDescriptionSize }}{{ columnDescripColorCLASS }}">
                        {{ block.settings.text }}
                      </div>
                    {%- endif -%}
                    
                    {% comment %} LINK element {% endcomment %}
                    {%- if block.settings.link_type == 'link' -%}
                      {%- if block.settings.link_label != blank -%}
                        <a class="button button--primary" {% if block.settings.link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.link }}"{% endif %}>{{ block.settings.link_label | escape }}<span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span></a>
                      {%- endif -%}
                    {%- else -%}
                      <modal-opener class="multicolumn-card-popup-modal__opener no-js-hidden" data-modal="#PopupModal-{{ block.id }}" {{ block.shopify_attributes }}>
                        <button id="ProductPopup-{{ block.id }}" class="button button--primary multicolumn-card-popup-modal__button" type="button"
                          aria-haspopup="dialog">{{ block.settings.link_label | escape }}<span class="icon-wrap">&nbsp;{% render 'icon-arrow' %}</span></button>
                      </modal-opener>
                      <modal-dialog id="PopupModal-{{ block.id }}" class="multicolumn-card-popup-modal" {{ block.shopify_attributes }}>
                        <div role="dialog" aria-label="{{ block.settings.link_label }}" aria-modal="true" class="multicolumn-card-popup-modal__content"
                          tabindex="-1">
                          <button id="ModalClose-{{ block.id }}" type="button" class="multicolumn-card-popup-modal__toggle"
                            aria-label="{{ 'accessibility.close' | t }}">{% render 'icon-close' %}</button>
                          <div class="multicolumn-card-popup-modal__content-info">
                            {% if block.settings.modal_image != blank %}
                            <img
                              srcset="{%- if block.settings.modal_image.width >= 275 -%}{{ block.settings.modal_image | image_url: width: 275 }} 275w,{%- endif -%}
                                {%- if block.settings.modal_image.width >= 550 -%}{{ block.settings.modal_image | image_url: width: 550 }} 550w,{%- endif -%}
                                {%- if block.settings.modal_image.width >= 710 -%}{{ block.settings.modal_image | image_url: width: 710 }} 710w,{%- endif -%}
                                {%- if block.settings.modal_image.width >= 1420 -%}{{ block.settings.modal_image | image_url: width: 1420 }} 1420w,{%- endif -%}
                                {{ block.settings.modal_image | image_url }} {{ block.settings.modal_image.width }}w"
                              src="{{ block.settings.modal_image | image_url: width: 550 }}"
                              sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
                              alt="{{ block.settings.modal_image.alt }}"
                              height="{{ block.settings.modal_image.height }}"
                              width="{{ block.settings.modal_image.width }}"
                              loading="lazy"
                            >
                            {% endif %}
                            {% if block.settings.modal_liquid %}
                              {{ block.settings.modal_liquid }}
                            {% endif %}
                          </div>
                        </div>
                      </modal-dialog>
                    {%- endif -%}
                    {% if block.settings.custom_liquid != blank and block.settings.liquid_background != blank %}
                      <div class="custom-liquid" style="background-color:{{ block.settings.liquid_background }};">
                        <h3 class="{% if block.settings.title_font != 'default' %}{{ block.settings.title_font }} {% endif %} {% if block.settings.col_title_size != 'default' %}{{ block.settings.col_title_size }}{% endif %}" {% if block.settings.custom_liquid != blank and block.settings.liquid_background != blank %}style="color:#000;"{% endif %}>
                          {{ block.settings.title }}
                        </h3>
                        {{ block.settings.custom_liquid }}
                      </div>
                    {% else %}
                      {{ block.settings.custom_liquid }}
                    {%- endif -%}
                  </div>
                {% endif %}
              </div>
            </li>
          {%- endcase -%}
        {%- endfor -%}
      </ul>

      {%- if section.settings.swipe_on_mobile -%}
        <div class="slider-buttons no-js-hidden medium-hide{% if section.blocks.size < 2 %} small-hide{% endif %}">
          <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'accessibility.previous_slide' | t }}">{% render 'icon-caret' %}</button>
          <div class="slider-counter caption">
            <span class="slider-counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'accessibility.of' | t }}</span>
            <span class="slider-counter--total">{{ section.blocks.size }}</span>
          </div>
          <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'accessibility.next_slide' | t }}">{% render 'icon-caret' %}</button>
        </div>
      {%- endif -%}
    </slider-component>
    <div class="center">
      {%- if section.settings.button_label != blank -%}
        <a class="button button--primary"{% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %}>
          {{ section.settings.button_label | escape }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

<style class="column-inset-styles">
  {% if section.settings.background_style == 'custom_bk_color' %}
    #shopify-section-{{ section.id }} .{{ backgroundStyleCLASS }} {
      background-color: {{ backgroundStyleColor }};
    }
  {% endif %}
  #shopify-section-{{ section.id }} .column-heading-color {
      color: {{ section.settings.column_heading_color }};
    }
  
  {% if section.settings.column_descrip_color != '#000000' %}
  .column-descrip-color > * {
    color: {{ section.settings.column_descrip_color }};
  }
  {% endif %}

  {% if section.settings.custom_css != empty %}
    @media screen and (min-width: 750px) {
      {{ section.settings.custom_css }}
    }
  {% endif %}
  {% if section.settings.custom_css_mobile != empty %}
    @media screen and (max-width: 749px) {
      {{ section.settings.custom_css_mobile }}
    }
  {% endif %}
  {% if block.settings.p_bullets %}
    .{{ section.id }} .p_bullets p::before {
      background: {{ block.settings.p_bullets_color }};
    }
    .{{ columnDescripColorCLASS }} {
      color: p_bullets_color_text;
    }
  {% endif %}
  {% if block.settings.icon_color != '#cdda01' %}
      .{{ section.id }} .icon {
        fill: {{ block.settings.icon_color }};
      }
  {% endif %}
</style>

{%- if block.settings.text_color_primary -%}
  {% assign textColorPrimary = ' color-foreground-accent-1' %}  
{%- endif -%}

{% schema %}
{
  "name": "t:sections.multicolumn.name",
  "class": "spaced-section spaced-section--full-width",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Multicolumn",
      "label": "t:sections.multicolumn.settings.title.label"
    },
    {
      "type": "checkbox",
      "id": "title_center",
      "label": "Center heading",
      "default": false
    },
    {
      "type": "select",
      "id": "title_size",
      "default": "default",
      "label": "Heading size",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "heading-1",
          "label": "h1"
        },
        {
          "value": "heading-2",
          "label": "h2"
        },
        {
          "value": "heading-3",
          "label": "h3"
        },
        {
          "value": "heading-5",
          "label": "h5"
        }
      ]
    },
    {
      "type": "color",
      "id": "main_heading_text_color",
      "label": "Main heading text color",
      "default": "#000000"
    },
    {
      "type": "image_picker",
      "id": "bk_image",
      "label": "Section background image"
    },
    {
      "type": "image_picker",
      "id": "bk_image_mobile",
      "label": "Section background image mobile"
    },
    {
      "type": "select",
      "id": "section_height",
      "default": "medium",
      "label": "Section height",
      "options": [
        {
        "value": "xsmall",
        "label": "Xsmall"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
