{%- assign is_filter_by_available = true -%}
{% if is_filter_by_available or section.settings.sort_enable %}
<div class="filters-toolbar-wrapper {% if is_filter_by_available %} filters-toolbar--has-filter{% endif %}">
  <div class="page-width">
    <div class="filters-toolbar">
      <div class="filters-toolbar__item filters-toolbar__item--count">
        <span class="filters-toolbar__product-count">
          {{- 'collections.general.items_with_count' | t: count: collections.all.products_count -}}


        </span>
      </div>
      {%- if request.path == '/products' -%}
      <div class="filters-toolbar__item filters-toolbar__item--count">
        <span class="filters-toolbar__product-count">
          <a href="#healthy-snacks">{{ collections.snacks.title }}</a> <span class="sub"> | </span>
          <a href="#wellness-supplements">{{ collections.wellness-supplements.title }}</a><span class="sub"> | </span>
          <a href="#featured-products">{{ settings.product_pg_feat_title }}</a>
        </span>
      </div>
      {%- endif -%}
    </div>
  </div>
</div>
{% endif %}

