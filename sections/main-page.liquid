<link rel="stylesheet" href="{{ 'section-main-page.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'component-rte.css' | asset_url }}" media="print" onload="this.media='all'">

<noscript>{{ 'section-main-page.css' | asset_url | stylesheet_tag }}</noscript>
<noscript>{{ 'component-rte.css' | asset_url | stylesheet_tag }}</noscript>

<div class="page-width page-width--narrow">
  {% if section.settings.title_alt != blank %}
    <h1 class="main-page-title page-title {% if section.settings.title_font != 'default' %}{{ section.settings.title_font }}{% else %}h0{% endif %} {% if section.settings.title_size != 'default' %}{{ section.settings.title_size }}{% endif %}" {% if section.settings.title_color != blank %}style="color:{{ section.settings.title_color }};"{% endif %}>
      {{ section.settings.title_alt | escape }}
    </h1>
  {% else %}
    <h1 class="main-page-title page-title h0">
      {{ page.title | escape }}
    </h1>
  {% endif %}
  <div class="rte">
    {{ page.content }}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "title_alt",
      "label": "Alt title"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#5bb6ae"
    },
    {
    "type": "select",
    "id": "title_font",
    "options": [
      {
        "value": "default",
        "label": "Default"
      },
      {
        "value": "proxima_nova_light",
        "label": "Proxima Nova Light"
      },
      {
        "value": "trade_gothic",
        "label": "Trade Gothic"
      },
      {
        "value": "trade_gothic_bold",
        "label": "Trade Gothic Bold"
      },
      {
        "value": "trade_gothic_bold_condensed",
        "label": "Trade Gothic Bold Condensed"
      },
      {
        "value": "trade_gothic_condensed",
        "label": "Trade Gothic Condensed"
      },
      {
        "value": "trade_gothic_condensed_bold",
        "label": "Trade Gothic Condensed Bold"
      },
      {
        "value": "trade_gothic_compressed_bold",
        "label": "Trade Gothic Compressed Bold"
      },
      {
        "value": "trade_gothic_condensed_heavy",
        "label": "Trade Gothic Condensed Heavy"
      }
    ],
      "default": "default",
      "label": "Title font"
    },
    {
      "type": "select",
      "id": "title_size",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "h1",
          "label": "h1"
        },
        {
          "value": "h2",
          "label": "h2"
        },
        {
          "value": "h3",
          "label": "h3"
        },
        {
          "value": "h5",
          "label": "h5"
        }
      ],
      "default": "default",
      "label": "Title size"
    }
  ]
}
{% endschema %}
